// Adds a @WithLog AST for Groovy.  This attaches a Log4J Logger to the annotated class.
import sublog.*

@WithLog
class Foo {
	static logStaticMsg() { log.info("This is a static message!") }
	def logInstanceMsg() { log.info("This is an instance message!") }
}

